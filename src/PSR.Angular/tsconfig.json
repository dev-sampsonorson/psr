/* To learn more about this file see: https://angular.io/config/tsconfig. */
{
  "compileOnSave": false,
  "compilerOptions": {
    // "rootDir": "./projects",
    "baseUrl": "./",
    "outDir": "./dist/out-tsc",
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "sourceMap": true,
    "declaration": false,
    "downlevelIteration": true,
    "experimentalDecorators": true,
    "moduleResolution": "node",
    "importHelpers": true,
    "target": "es2017",
    "module": "es2020",
    "lib": [
      "es2018",
      "dom"
    ],
    "paths": {
      "@env/*": ["projects/psr/src/environments/*"],
    //   "@shared/*": ["projects/psr/src/app/shared/*"],
    //   "@layouts/*": ["projects/psr/src/app/shared/layouts/*"],
      "@features/*": ["projects/psr/src/app/features/*"],
    //   "@core/*": ["projects/psr/src/app/core/*"],
    //   "@auth/*": ["projects/psr/src/app/features/auth/*"],
      "@config/*": [
        "projects/psr/src/app/config/*"
      ],

    //   "@sharedlib": ["projects/sharedlib/src/index.ts"],
    //   "@corelib": ["projects/corelib/src/index.ts"],
      "@sharedlib": [
        // "projects/sharedlib/src/index.ts",
        "dist/sharedlib/sharedlib",
        "dist/sharedlib",
      ],
      "@corelib": [
        // "projects/corelib/src/index.ts",
        "dist/corelib/corelib",
        "dist/corelib",
      ],
      //dist/corelib/lib/error/error.module

      "@skilllib": [
        "dist/skilllib/skilllib",
        "dist/skilllib"
      ],
      "@authlib": [
        "dist/authlib/authlib",
        "dist/authlib"
      ],
      "@headerlib": [
        "dist/headerlib/headerlib",
        "dist/headerlib"
      ],
      "@skillmgtlib": [
        "dist/skillmgtlib/skillmgtlib",
        "dist/skillmgtlib"
      ],
    }
  },
  "angularCompilerOptions": {
    "enableI18nLegacyMessageIdFormat": false,
    "strictInjectionParameters": true,
    "strictInputAccessModifiers": true,
    "strictTemplates": true
  }
}
